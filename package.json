{
  "name": "siphon-server",
  "version": "0.1.0",
  "description": "A webgame server using Next.js, ExpressJS, Typescript, and socket.io. Suitable for turn-based games with nice UIs and not a ton of concurrent players.",
  "private": true,
  "author": "Damien Snyder <damien@damiensnyder.com>",
  "scripts": {
    "build": "sh scripts/run-tsc-except-on-jsx.sh && next build",
    "dev": "sh scripts/run-tsc-except-on-jsx.sh && node src/backend/app.js -p $PORT",
    "start": "node src/backend/app.js -p $PORT",
    "test": "sh scripts/run-tsc-except-on-jsx.sh && node src/backend/test.js -p $PORT"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.2",
    "express": "^4.17.1",
    "next": "^11.0.1",
    "node-fetch": ">=2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "socket.io": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@types/react": "^17.0.2",
    "typescript": "^4.3.2"
  }
}
