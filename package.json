{
  "name": "siphon-server",
  "version": "0.1.0",
  "description": "A webgame server using Next.js, ExpressJS, Typescript, and socket.io. Suitable for turn-based games with nice UIs and not a ton of concurrent players.",
  "private": true,
  "author": "Damien Snyder <damien@damiensnyder.com>",
  "scripts": {
    "build": "next build",
    "test": "tsc && node test.js -p $PORT",
    "start": "node app.js -p $PORT",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "next": "^11.0.1",
    "node-fetch": ">=2.6.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "socket.io": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.45",
    "typescript": "^3.9.7"
  }
}
